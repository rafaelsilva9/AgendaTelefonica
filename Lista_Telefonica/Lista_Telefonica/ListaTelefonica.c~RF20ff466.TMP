struct Header {
	long int qtdRegistros;
	long int head;
	long int tail;
};

FILE* AbreArquivo(char* caminho, char* tipo) {
	FILE* file;
	struct Header header;
	header.qtdRegistros = 0;
	file = fopen(caminho, "rb");
	int status;
	if (file == NULL)
	{
		file = fopen(caminho, tipo);
		status = fwrite(&header, sizeof(struct Header), 1, file);
	}
	else
	{
		fclose(file);
		file = fopen(caminho, tipo);
	}
	return file;
}

